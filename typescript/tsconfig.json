{
  "compilerOptions": {
    "module": "node16",
    "esModuleInterop": false,
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true
  },
  "lib": ["ES6"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
